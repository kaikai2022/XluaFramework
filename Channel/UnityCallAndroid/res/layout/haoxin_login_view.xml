<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sdkbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:columnCount="1" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/haoxin_logo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:background="#00000000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/haoxin_login_layout_user"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="2.0dip" >

                <LinearLayout
                    android:id="@+id/haoxin_login_layout_user_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/haoxin_login_layout_icon_user"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/haoxin_img_des"
                        android:src="@drawable/haoxin_user" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/haoxin_login_layout_arrow"
                    android:layout_width="40dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/haoxin_login_img_arrow"
                        android:layout_width="20.0dip"
                        android:layout_height="11.0dip"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/haoxin_arrow_down"
                        android:clickable="false"
                        android:contentDescription="@string/haoxin_img_des"
                        android:padding="5dp" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/haoxin_login_edit_user"
                    android:layout_width="fill_parent"
                    android:layout_height="38.0dip"
                    android:layout_toLeftOf="@+id/haoxin_login_layout_arrow"
                    android:layout_toRightOf="@+id/haoxin_login_layout_user_icon"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/haoxin_login_user_hint"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusForward="@+id/haoxin_login_edit_password"
                    android:padding="0.0dip"
                    android:textColor="#ff000000"
                    android:textColorHint="#ffa9a9a9"
                    android:textSize="12sp" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/haoxin_login_layout_password"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="2.0dip" >

                <LinearLayout
                    android:id="@+id/haoxin_login_layout_psw_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/haoxin_login_icon_psw"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:contentDescription="@string/haoxin_img_des"
                        android:src="@drawable/haoxin_psw" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/haoxin_login_layout_eye"
                    android:layout_width="40dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/haoxin_login_text_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:padding="0.0dip"
                        android:text="@string/haoxin_login_eye"
                        android:textColor="#ffa9a9a9"
                        android:textSize="12sp" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/haoxin_login_edit_password"
                    android:layout_width="fill_parent"
                    android:layout_height="38.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/haoxin_login_layout_eye"
                    android:layout_toRightOf="@+id/haoxin_login_layout_psw_icon"
                    android:background="@null"
                    android:hint="@string/haoxin_login_password_hint"
                    android:inputType="textPassword"
                    android:padding="0.0dip"
                    android:textColor="#ff000000"
                    android:textColorHint="#ffa9a9a9"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_layout_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:padding="2.0dip" >

            <TextView
                android:id="@+id/haoxin_login_text_modify_password"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:padding="0.0dip"
                android:text="@string/haoxin_login_modify_password"
                android:textColor="#ff888888"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/haoxin_login_bind_telephone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:padding="0.0dip"
                android:text="@string/haoxin_bind_telephone_desc"
                android:textColor="#ff888888"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/haoxin_login_text_forget_pw"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:padding="0.0dip"
                android:text="@string/haoxin_login_forget_password"
                android:textColor="#ff888888"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_layout_reg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:padding="2.0dip" >

	        <Button
	            android:id="@+id/haoxin_login_btn_submit"
	            android:layout_width="70dp"
	            android:layout_height="30dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/haoxin_btn2_x"
	            android:gravity="center"
	            android:padding="0.0dip"
	            android:text="@string/haoxin_login_submit"
	            android:textColor="#ffffffff"
	            android:textSize="14sp" />

	        <Button
	            android:id="@+id/haoxin_fast_register_btn_submit"
	            android:layout_width="70dp"
	            android:layout_height="30dp"
	            android:layout_alignBaseline="@+id/haoxin_login_btn_submit"
	            android:layout_alignBottom="@+id/haoxin_login_btn_submit"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="10dp"
	            android:background="@drawable/haoxin_btn2_x"
	            android:gravity="center"
	            android:padding="0.0dip"
	            android:text="@string/haoxin_loing_fast"
	            android:textColor="#ffffffff"
	            android:textSize="14sp" />
	        
	        <Button
	            android:id="@+id/haoxin_register_btn_submit"
	            android:layout_width="70dp"
	            android:layout_height="30dp"
	            android:layout_alignBaseline="@+id/haoxin_login_btn_submit"
	            android:layout_alignBottom="@+id/haoxin_login_btn_submit"
	            android:layout_alignParentRight="false"
	            android:layout_centerInParent="true"
	            android:background="@drawable/haoxin_btn2_x"
	            android:gravity="center"
	            android:padding="0.0dip"
	            android:text="@string/haoxin_login_register"
	            android:textColor="#ffffffff"
	            android:textSize="14sp" />

         </RelativeLayout>

    </LinearLayout>

</LinearLayout>