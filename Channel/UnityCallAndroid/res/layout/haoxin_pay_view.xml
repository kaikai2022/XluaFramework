<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sdkbg"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#ffffffff"
        android:columnCount="1" >

        <Button
            android:id="@+id/haoxin_pay_btn_return"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/haoxin_btn_return_x"
            android:gravity="center"
            android:padding="0.0dip"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="@string/haoxin_pay_title"
            android:textColor="#ff000000"
            android:textSize="20sp" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/haoxin_pay_layout_submit"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.12"
        android:background="#00000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/haoxin_pay_select"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/haoxin_pay_layout_select"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/haoxin_pay_layout_ali"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/haoxin_pay_select_bg_x"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:contentDescription="@string/haoxin_img_des"
                    android:src="@drawable/haoxin_icon_alipay" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:clickable="false"
                    android:text="@string/haoxin_pay_ali"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/haoxin_pay_line_ali"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffdfe0e3" />

            <LinearLayout
                android:id="@+id/haoxin_pay_layout_weixin"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:contentDescription="@string/haoxin_img_des"
                    android:src="@drawable/haoxin_icon_weixinpay" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:clickable="false"
                    android:text="@string/haoxin_pay_weixin"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/haoxin_pay_line_weixin"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffdfe0e3" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/haoxin_pay_layout_money"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="@string/haoxin_pay_money_desc"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/haoxin_pay_text_money"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/haoxin_pay_layout_goods"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="@string/haoxin_pay_goods_desc"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/haoxin_pay_text_goods"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/haoxin_pay_btn_submit"
            android:layout_width="200dp"
            android:layout_height="38.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/haoxin_btn1_x"
            android:gravity="center"
            android:padding="0.0dip"
            android:text="@string/haoxin_pay_submit"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>